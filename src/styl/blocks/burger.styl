.burger
	size 32px 24px
	background-color transparent
	border-top 4px solid #000
	border-bottom 4px solid #000
	vertical-align middle
	position relative
	z-index 10
	display inline-block
	cursor pointer
	&:before
		content ""
		width 100%
		height 4px
		background-color #000
		position relative
		top 6px
		z-index 1
		display block