.popup-bg
	height 100%
	background alpha(#000, .2)
	opacity 0
	padding 40px
	position fixed
	top 0
	right 0
	left 0
	z-index -1
	display flex
	align-items center
	justify-content center
	transition all .3s ease
	&.open
		opacity 1
		visibility visible
		z-index 10

.popup
	width 100%
	max-width 940px
	max-height 100vh
	overflow auto
	background #fff
	box-shadow 0 0 30px alpha(#000, .1)
	visibility hidden
	opacity 0
	position relative
	display block
	flex 0 1 auto
	font-smoothing antialiased !important
	-webkit-backface-visibility hidden
	&.open
		visibility visible
		opacity 1
	&.load
		min-height 160px
		&:after
			@extend .loading
			content ""
			position absolute
			top calc(50% - 36px)
			left calc(50% - 36px)
	&__loaded
		padding 30px
	&__close
		cross()
		position absolute
		right 35px
		top 40px
		cursor pointer
