.cabinet {
  &__organization {
    display flex
    align-items center
    
    &:hover {
      color: #f39324
    }
    
    img {
      margin-right 30px
    }
    
    &__text {
      border-bottom: 1px solid transparent !important
      
      &:hover {
        color: #f39324
        border-bottom: 1px solid #f39324 !important
      }
    }
  }
  &__form {
    @extends .row
    width: auto
    margin: 0px -20px
    margin-top: 25px
    &__block {
      width 50%
      padding: 0px 20px
      margin-bottom: 23px
      &--full {
        width 100%
      }
    }
  }
  &__personal {
    &__description {
      padding-top: 6px
      margin-bottom: 41px
    }
    &__img {
      margin-bottom 44px
    }
    &__block {
      margin-bottom 28px
      &--photos {
        margin-top 71px
      }
    }
  }
}